<div class="cintainer mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2 class="area-new">エリア追加</h2>
			<%= form_for @area, url: new_admins_area_path do |f| %>
			<div class="form-group">
				<label>エリアタイトル</label>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<label>エリア概要</label>
				<%= f.text_area :body, class: "form-control" %>
			</div>

			<div class="form-group">
				<label>エリア画像</label>
				<%= f.attachment_field :image, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= f.submit "エリアを追加する", class: "btn btn-success btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
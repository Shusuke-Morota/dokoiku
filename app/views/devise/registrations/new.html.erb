
<style>
  .fa {
    font-weight: 501;
  }
</style>


<div class="container mt-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <div class="form-wrapper">
        <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :お名前 %>
          <%= f.text_field :name, autofocus: true, class: "form-control fa", placeholder: "\uf007 お名前" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control fa", placeholder: "\uf0e0 メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control fa", placeholder: "\uf023 パスワード" %>
        </div>

        <div class="form-group">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control fa", placeholder: "\uf023 確認用パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-success btn-block" %>
        </div>
        <% end %>

        <div class="already-sign-up" style="margin-top: 30px">
          <p>既に登録されている方は<%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
</div>


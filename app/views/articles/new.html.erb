

<% if @article.errors.any? %>
<div class="alert alert-danger" role="alert">
	<h4 class="alert-heading"><%= pluralize(@article.errors.count, "error") %></h4>
	<p><%= pluralize(@article.errors.count, "件のエラー") %>を検出しました。</p>
	<hr>
	<p class="mb-0">
		<% @article.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</p>
</div>
<% end %>

<div class="container mt-5">
	<div class="row">
		<div class="col-7 mx-auto">
			<h2 class="articles-new-title">新規投稿</h2>
			<%= form_for @article do |f| %>
			<div class="form-group">
				<label>プランのタイトル</label>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<label>プランの本文</label>
				<%= f.text_area :body, size: "20x5", class: "form-control" %>
			</div>

			<div class="form-group">
				<label>カテゴリー選択</label>
				<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
			</div>

			<div id="cover-image" class="form-group relative">
				<label>プランの写真　(写真の複数投稿ができます)</label>
				<%= image_tag "gray-wall.jpg", class: "article-image" %>
				<i class="fa fa-camera"></i>
			</div>

			<%= f.attachment_field :article_images_images, class: "input", multiple: true %>

			<div class="actions-right" style="margin-bottom: 30px;">
				<%= f.submit "投稿する", class: "btn btn-success btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>

<h1>Articles#edit</h1>
<p>Find me in app/views/articles/edit.html.erb</p>

<% if @article.errors.any? %>
<div class="alert alert-danger" role="alert">
	<h4 class="alert-heading"><%= pluralize(@article.errors.count, "error") %></h4>
	<p><%= pluralize(@article.errors.count, "件のエラー") %>を検出しました。</p>
	<hr>
	<p class="mb-0">
		<% @article.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</p>
</div>
<% end %>


<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2>記事の編集</h2>
			<%= form_for @article do |f| %>
			<div class="form-group">
				<label>記事のタイトル</label>
				<%= f.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<label>記事の本文</label>
				<%= f.text_area :body, class: "form-control" %>
			</div>

			<div class="form-group">
				<label>記事の写真</label>
				<%= f.attachment_field :image, class: "input" %>
			</div>

			<div class="actions-right">
				<%= f.submit "投稿", class: "btn btn-success btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>

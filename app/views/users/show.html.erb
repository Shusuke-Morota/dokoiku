

<div class="container mt-5">
	<div class="row">
		<div class="col-4">
			<h2 class="page-title">マイページ</h2>
			<div class="card">
				<div class="card-body">
					<%= attachment_image_tag @user, :profile_image, :fill, 300, 250, fallback: "no-image.png", format:'png', class:"img-fluid mx-auto" %>
				</div>
				<div class="content">
					<div class="card-body">
						<h5 class="card-title" style="border-bottom: solid 1px #E8E8E8;">
							<%= @user.name %><br>
							<small>
								フォロー数：<%= link_to @user.follower.count, users_following_path(@user) %>
							</small><br>

							<small>
								フォロワー数：<%= link_to @user.followed.count, users_follower_path(@user) %>
							</small><br>
						</h5>

						<% if @user.id == current_user.id %>
						<p class="card-text" style="border-bottom: solid 1px #E8E8E8;"><small class="text-muted"><%= @user.email %></small></p>
						<% end %>

						<p class="card-text" style="border-bottom: solid 1px #E8E8E8;"><%= @user.profile %></p>
						<div class="user-show-btn">
							<% if @user.id == current_user.id %>
							<%= link_to "ユーザー情報を編集する", edit_user_path, class: "btn btn-warning" %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-8">
			<div class="row">
				<% @user.articles.each do |article| %>
				<div class="col-4">
					<div class="h-50 mt-5">
						<div class="card" style="box-shadow: 0 0 8px lightgray;">
							<div class="card-body">
								<% if article.article_images.present? %>
								<%= link_to article_path(article) do %>
								<%= attachment_image_tag article.article_images.first, :image,:fill,200,150, format:'jpg', class:"img-fluid" %>
								<% end %>
								<% end %>
							</div>

							<div class="article-show">
								<%= link_to article_path(article) do %>
								<span class="panel-icon">
									<i class="far fa-newspaper"></i>
								</span>
								このプランを見る
								　　<% end %>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
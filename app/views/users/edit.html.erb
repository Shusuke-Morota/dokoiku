<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<% if @user.errors.any? %>
<div class="alert alert-danger" role="alert">
	<h4 class="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
	<p><%= pluralize(@user.errors.count, "件のエラー") %>を検出しました。</p>
	<hr>
	<p class="mb-0">
		<%= @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</p>
</div>
<% end %>

<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2>ユーザー情報編集</h2>
			<%= form_for @user do |f| %>
			<div class="form-group">
				<label>ユーザー名</label>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<label>メールアドレス</label>
				<%= f.email_field :email, class: "form-control" %>
			</div>
			<div>
				<%= f.submit "更新する", class: "btn btn-success" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
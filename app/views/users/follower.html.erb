

<div class="container mt-5">
	<div class="row">
		<div class="col-8 mx-auto">
			<h2 class="follower-index-title"><%= @user.name %>さんのフォロワー</h2>
			<table class="table table-hover">
				<thead class="follower-header">
					<tr>
						<th scope="col">ユーザーアイコン</th>
						<th scope="col">ユーザー名</th>
						<th scope="col">プロフィール</th>
					</tr>
				</thead>
				<tbody class="follower-body">
					<% @followers.each do |follower| %>
					<tr>
						<td class="follower-user-profile-image">
							<%= link_to user_path(follower) do %>
							<%= attachment_image_tag follower, :profile_image, :fill, 75, 75, fallback: "no-image.png", size: "100x100", format:'png', class:"img-fluid" %>
							<% end %>
						</td>

						<td class="follower-user-name">
							<%= link_to user_path(follower) do %>
							<%= follower.name %>
							<% end %>
						</td>

						<td class="follower-profile">
							<%= truncate(follower.profile, length: 15) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>












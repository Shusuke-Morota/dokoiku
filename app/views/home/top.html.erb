



<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<div class="top-button">
				<%= link_to "ログイン", new_user_session_path, class: "btn btn-warning btn-block" %>
				<%= link_to "新規登録", new_user_registration_path, class: "btn btn-warning btn-block" %>
			</div>
		</div>
	</div>

	<h3 class="p-top_heading">カテゴリーから探す</h3>

	<div class="col-3">
		<div class="row">
			<% @categories.each do |category| %>
			<div class="col-6 category">
				<div class="category-title" style="margin-bottom: 7px;">
					<%= attachment_image_tag category, :category_image, :fill, 105, 100, format: "png" %>
					<p><%= category.name %></p>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
